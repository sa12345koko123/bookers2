<html>
  <head>
    
  </head>
  <body>
    <h1>Editing Book</h1>
    
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    
    <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      
      <%= f.submit "Update Book" %>
    <% end %>
    <p>
    <%= link_to "show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
    </p>  
  </body>
</html>