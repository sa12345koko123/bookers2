<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <h2>User info</h2>

      <%= image_tag current_user.get_profile_image(100,100) %>
      <h5>name</h5>
        <%= current_user.name %>
      <h5>introduction</h5>
        <%= current_user.introduction %>
        <%= link_to "edit", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>


      <h2>New book</h2>

      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <nav>
        <%= f.submit 'Create Book', class: "col-xs-3 btn-sm btn-success"%>
      </nav>
      <% end %>
    </div>

    <div class= "col-md-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>title</th>
          <th colspan="3">Opinion</th>
        </tr>


        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %></td>
              <% end %>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>