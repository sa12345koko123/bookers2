<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class= "col-md-3">
      <table class="table table-user">
        <h2>User info</h2>

        <thed>
          <tr>
            <%= image_tag current_user.get_profile_image(100,100) %>
          </tr>
        </thed>

        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <button type="button" class="btn btn-secondary btn-block text-white ">
        <%= link_to edit_user_path(current_user), class: "btn btn-secondary text-white" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </button>





      <h2>New book</h2>

      <%= form_with model: @book do |f| %>
      <h5>Title</h5>
        <%= f.text_field :title %>
      <h5>Opinion</h5>
        <%= f.text_area :body %>
      <nav>
        <%= f.submit 'Create Book', class: "col-xs-3 btn-sm btn-success"%>
      </nav>
      <% end %>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>title</th>
          <th colspan="3">Opinion</th>
        </tr>


        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %></td>
              <% end %>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>