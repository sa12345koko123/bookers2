<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'users/info', user:@user %>
      <%= render 'books/new', book:@newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
                <nav>
                  <%= @book.user.name %>
                </nav>
            <% end %>
          </td>

          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>

          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "Are you sureï¼Ÿ"} %></td>
          <% end %>
        </tr>
      </table>
    </div>