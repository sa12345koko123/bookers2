<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

　　<script src="https://kit.fontawesome.com/add29eec17.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand " href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to user_path(current_user), class: "text-light" do %>
                  <i class="fa-solid fa-house-chimney"></i><span>Home</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to users_path, class: "text-light" do %>
                  <i class="fa-solid fa-users"></i><span>Users</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to books_path, class: "text-light" do %>
                  <i class="fa-solid fa-book-open"></i><span>Books</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: "text-light" do %>
                  <i class="fa-solid fa-right-from-bracket"></i><span>Log out</span>
                <% end %>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: "text-light" do %>
                  <i class="fa-solid fa-house-chimney"></i><span>Home</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to home_about_path, class: "text-light" do %>
                  <i class="fa-solid fa-link"></i><span>About</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "text-light" do %>
                <i class="fa-solid fa-user-plus"></i><span>Sing up</span>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_session_path, class: "text-light" do %>
                <i class="fa-solid fa-right-to-bracket"></i>
                <% end %>
              </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>



    <main>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    <%= yield %>
    </main>

    <footer class="foooter">
      <div class="container text-center">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
