<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'users/info', user:@user %>
      <%= render 'books/new', book:@book %>
    </div>

    <div class="col-md-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
        <tr class="new-table">
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

